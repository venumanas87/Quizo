<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/rl1"
          >
          <com.google.android.material.appbar.MaterialToolbar
              android:layout_width="match_parent"
              android:layout_height="?attr/actionBarSize"
              android:background="@color/colorPrimaryLight"
              android:theme="@style/whiteIcon"
              app:menu="@menu/prof_menu"
              android:id="@+id/toolbar"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/feels_white_80"
              android:layout_below="@id/toolbar"
              android:id="@+id/profcardrl">
          <com.google.android.material.card.MaterialCardView
              android:layout_width="match_parent"
              android:layout_height="290dp"
              android:elevation="0dp"
              android:outlineProvider="none"
              app:shapeAppearance="@style/ShapeAppearance.Quizo.MediumComponent"
              android:backgroundTint="@color/colorPrimaryLight">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/ic_cloud_circle_black_24dp"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/profimg"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/raleway_light"
                   android:textColor="@color/white"
                   android:text="@string/app_name"
                   android:textSize="35sp"
                   android:layout_centerHorizontal="true"
                   android:layout_below="@id/profimg"
                   android:layout_marginTop="20dp"
                   android:id="@+id/textView"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/raleway_light"
                   android:text="@string/app_name"
                   android:layout_below="@id/textView"
                   android:id="@+id/textView2"
                   android:textColor="@color/white"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="10dp"/>
           </RelativeLayout>
          </com.google.android.material.card.MaterialCardView>
          </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/profcardrl"
    android:background="@color/colorPrimaryLight">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="0dp"
        android:outlineProvider="none"
        app:shapeAppearance="@style/ShapeAppearance.Quizo.MediumComponent.Round"
        android:backgroundTint="@color/feels_white_80"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/c1"
            app:shapeAppearance="@style/ShapeAppearance.Quizo.MediumComponent.RoundC"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="@dimen/twenty"
            android:layout_marginVertical="@dimen/ten_dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_public_24"
                    android:tint="@color/colorPrimary"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:text="Become Publisher"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/c12"
                    app:shapeAppearance="@style/ShapeAppearance.Quizo.MediumComponent.RoundC"
                    android:layout_toEndOf="@id/c1"
                    android:backgroundTint="@color/white"
                   android:layout_marginHorizontal="@dimen/twenty"
                    android:layout_marginVertical="@dimen/ten_dp"

                    app:cardElevation="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_baseline_update_24"
                            android:tint="@color/colorPrimary"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_light"
                            android:text="Updates"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>

          <com.google.android.material.card.MaterialCardView
              android:layout_width="170dp"
              android:layout_height="50dp"
              android:layout_marginBottom="@dimen/hundred"
              android:backgroundTint="@color/grey"
              android:layout_alignParentBottom="true"
              app:cardCornerRadius="70dp"
              android:layout_centerHorizontal="true"
              android:id="@+id/c2"

              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="SIGN OUT"
                  android:layout_gravity="center"
                  android:textColor="@color/white"
                  android:fontFamily="@font/raleway"
                  android:textSize="20sp"/>
          </com.google.android.material.card.MaterialCardView>





        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>


      </RelativeLayout>

  </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_light"
        android:id="@+id/btmnav"
        app:menu="@menu/new_menu"
        android:background="@color/colorPrimaryLight"
        app:itemIconTint="@drawable/nav_back"
        android:layout_gravity="bottom"
        app:itemHorizontalTranslationEnabled="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>